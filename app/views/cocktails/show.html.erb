<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
  <ul>
    <li><%= dose.ingredient.name %>:
    <%= dose.description %></li>
    <%= link_to "delete", dose_path(dose), method: :delete, data: {confirm: "are you sure you want to delete?"} %>
  </ul>
<% end %>

<p> <%= link_to "Back to all cocktails", root_path %> </p>
<p> <%= link_to "add doses", new_cocktail_dose_path(@cocktail) %> </p>
<%= link_to "Delete this Cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure you want to delete?' } %>
